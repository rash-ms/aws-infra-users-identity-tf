{
    "policies": {
        "full-access-policy": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Action": [
                        "ec2:Describe*",
                        "s3:Get*",
                        "s3:List*",
                        "s3:PutObject",
                        "s3:DeleteObject",
                        "dynamodb:Get*",
                        "dynamodb:Query",
                        "dynamodb:Scan",
                        "dynamodb:List*",
                        "rds:Describe*",
                        "lambda:InvokeFunction",
                        "lambda:List*",
                        "logs:Get*",
                        "logs:Describe*",
                        "logs:FilterLogEvents",
                        "cloudwatch:Get*",
                        "cloudwatch:List*",
                        "cloudwatch:Describe*",
                        "iam:PassRole",
                        "cloudformation:Describe*",
                        "cloudformation:List*",
                        "ecr:BatchCheckLayerAvailability",
                        "ecr:GetDownloadUrlForLayer",
                        "ecr:Describe*",
                        "ecs:Describe*",
                        "ecs:List*",
                        "elasticbeanstalk:Describe*",
                        "elasticbeanstalk:List*",
                        "codebuild:BatchGetBuilds",
                        "codebuild:List*",
                        "codedeploy:BatchGet*",
                        "codedeploy:Get*",
                        "codedeploy:List*",
                        "codepipeline:Get*",
                        "codepipeline:List*",
                        "ssm:Get*",
                        "ssm:List*",
                        "kms:Encrypt",
                        "kms:Decrypt",
                        "kms:GenerateDataKey",
                        "kms:DescribeKey",
                        "redshift:Describe*",
                        "eks:Describe*",
                        "eks:List*",
                        "kinesis:Describe*",
                        "kinesis:Get*",
                        "kinesis:List*",
                        "secretsmanager:GetSecretValue",
                        "secretsmanager:List*",
                        "secretsmanager:Describe*",
                        "events:Describe*",
                        "events:List*",
                        "glue:Get*",
                        "glue:List*",
                        "glue:StartJobRun",
                        "glue:StopJobRun",
                        "emr:Describe*",
                        "emr:List*",
                        "emr:TerminateJobFlows",
                        "sns:Get*",
                        "sns:List*",
                        "sns:Subscribe",
                        "sns:Publish",
                        "sns:Unsubscribe"
                    ],
                    "Resource": "*"
                },
                {
                    "Effect": "Deny",
                    "Action": [
                        "iam:DeleteUser",
                        "iam:DeleteRole",
                        "iam:DeletePolicy",
                        "iam:CreatePolicyVersion",
                        "iam:SetDefaultPolicyVersion",
                        "kms:ScheduleKeyDeletion",
                        "kms:DeleteAlias",
                        "s3:DeleteBucket",
                        "eks:DeleteCluster",
                        "glue:DeleteDatabase",
                        "glue:DeleteTable",
                        "glue:DeleteJob",
                        "glue:DeleteCrawler",
                        "emr:TerminateCluster",
                        "emr:DeleteSecurityConfiguration",
                        "emr:DeleteCluster",
                        "sns:CreateTopic",
                        "sns:DeleteTopic",
                        "sns:CreateSubscription",
                        "kinesis:DeleteStream",
                        "ecs:DeleteCluster",
                        "ecs:DeleteService",
                        "ecs:DeregisterTaskDefinition",
                        "rds:DeleteDBInstance",
                        "dynamodb:DeleteTable",
                        "dynamodb:DeleteItem",
                        "dynamodb:DeleteBackup"
                    ],
                    "Resource": "*"
                }
            ]
        },
        "readonly-access-policy": {
            "Version": "2012-10-17",
            "Statement": [
                {
                    "Effect": "Allow",
                    "Action": [
                        "ec2:Describe*",
                        "s3:Get*",
                        "s3:List*",
                        "s3:PutObject",
                        "rds:Describe*",
                        "iam:Get*",
                        "iam:List*",
                        "cloudwatch:Get*",
                        "cloudwatch:List*",
                        "cloudwatch:Describe*"
                    ],
                    "Resource": "*"
                }
            ]
        }
    }
}
